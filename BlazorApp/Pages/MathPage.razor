@page "/mathpage"

<PageTitle>Math Page</PageTitle>

<h1>Welcome to the Math Page!</h1>
<h5 style="margin-bottom:1.5em; margin-top:1.5em">Let's See What These Numbers Can Really Do...</h5>
<p role="status">Current count: @currentCount</p>
<p>Multiplied count: @multipliedCount</p>
<p>Subtracted count: @subtractedCount</p>
<p>Divided count: @dividedCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 1;
    private double multipliedCount = 1;
    private double subtractedCount = 1;
    private double dividedCount = 1;

    [Parameter]
    public int IncrementAmount { get; set; } = 1;

    private void IncrementCount()
    {        
        multipliedCount *= currentCount;
        subtractedCount -= currentCount;
        dividedCount /= currentCount;
        currentCount += IncrementAmount;
    }
}
